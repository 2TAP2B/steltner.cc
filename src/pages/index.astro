---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Cta from "@components/content/Cta.astro";
---

<Layout title="Digital Infrastructure & Self-Hosting">
  <HeroMain />

  <SectionMuted id="infrastructure">
    <Container>
      <div x-intersect="activeStep = 'spy-1'">
        <SectionTitle
          title="Self-Hosted Digital Infrastructure"
          subtitle="Building secure, private, and sovereign digital services in my homelab and cloud infrastructure. Taking control of my data and digital presence."
          minititle="Digital Sovereignty"
        />

      <div class="grid md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12">
        <!-- Item -->
        <div>
          <IconBlock
            title="Mail Server"
            text="Running a secure, privacy-focused mail server with anti-spam protection and encrypted communication."
            icon="ph:envelope-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Cloud Storage"
            text="Self-hosted file synchronization and sharing with end-to-end encryption and full data control."
            icon="ph:cloud-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Monitoring & Logs"
            text="24/7 infrastructure monitoring with alerting, log aggregation, and performance analytics."
            icon="ph:chart-line-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Container Platform"
            text="Docker-based microservices architecture with orchestration, scaling, and automated deployments."
            icon="ph:package-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="VPN & Security"
            text="Secure remote access through self-hosted VPN with multi-factor authentication and network segmentation."
            icon="ph:shield-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Backup Systems"
            text="Automated, encrypted backups with off-site replication ensuring data durability and disaster recovery."
            icon="ph:hard-drives-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="DNS & Networking"
            text="Custom DNS with ad-blocking, local resolution, and network-wide privacy protection."
            icon="ph:globe-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Automation"
            text="Infrastructure as code with automated provisioning, configuration management, and CI/CD pipelines."
            icon="ph:robot-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'overflow-hidden'" id="services">
    <Container>
      <div class="py-10" x-intersect="activeStep = 'spy-2'">
        <SideStatsRight />
        <SideStatsLeft />
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted id="digital-sovereignty">
    <Container>
      <div x-intersect="activeStep = 'spy-3'">
        <SectionTitle
          title="Why Self-Host?"
          subtitle="Understanding the importance of digital sovereignty and taking control of your digital infrastructure for privacy, security, and independence."
          minititle="Digital Independence"
          class="'mx-auto text-center'"
        />
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 py-12">
        <div class="text-center">
          <div class="mb-4 flex justify-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/20 rounded-full flex items-center justify-center">
              <iconify-icon icon="ph:shield-check-duotone" class="text-3xl text-primary-600"></iconify-icon>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-muted-800 dark:text-white mb-3">Privacy Control</h3>
          <p class="text-muted-500 dark:text-muted-400">Your data stays under your control. No third-party access, no data mining, no unexpected policy changes.</p>
        </div>
        
        <div class="text-center">
          <div class="mb-4 flex justify-center">
            <div class="w-16 h-16 bg-rose-100 dark:bg-rose-900/20 rounded-full flex items-center justify-center">
              <iconify-icon icon="ph:currency-dollar-duotone" class="text-3xl text-rose-500"></iconify-icon>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-muted-800 dark:text-white mb-3">Cost Efficiency</h3>
          <p class="text-muted-500 dark:text-muted-400">Reduce long-term costs by avoiding subscription fees and vendor lock-in while gaining more features.</p>
        </div>
        
        <div class="text-center">
          <div class="mb-4 flex justify-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/20 rounded-full flex items-center justify-center">
              <iconify-icon icon="ph:brain-duotone" class="text-3xl text-primary-600"></iconify-icon>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-muted-800 dark:text-white mb-3">Learning & Skills</h3>
          <p class="text-muted-500 dark:text-muted-400">Develop deep technical knowledge and problem-solving skills through hands-on infrastructure management.</p>
        </div>
      </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted id="contact">
    <Container>
      <Cta />
    </Container>
  </SectionMuted>
</Layout>
